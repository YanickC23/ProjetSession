<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout10"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Location.LouerVoiture">

    <TextView
        android:id="@+id/textView30"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Louer une Voiture"
        android:textAlignment="center"
        android:textColor="?attr/actionMenuTextColor"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/imgholderLocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgholderLocation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/we23rfdwe"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView30"
        app:layout_constraintTop_toBottomOf="@+id/textView30" />

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="120dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvmarquemodelelocationvoiture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/couleurBouton"
            android:text="Toyota Matrix"
            android:textColor="@color/couleurTexteBouton"
            android:textSize="36sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvannelocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2006"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tvvoituretypelocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Crossover"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="30sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvprixlocation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="bottom"
                android:text="45,78$"
                android:textAlignment="@+id/tvvoituretypelocation"
                android:textColor="@color/couleurComplementaire_1"
                android:textSize="48sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnlouervoiture2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_weight="7"
            android:background="@drawable/bouton_enr"
            android:text="Louer"
            android:textColor="@color/couleurTexteBouton"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>